{
  "extends": "expo/tsconfig.base",
  "types": ["jest", "styled-components-react-native"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@config/*": ["./src/config/*"],
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"]
    }
  }
}
